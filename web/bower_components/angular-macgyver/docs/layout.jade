doctype html
html
  head
      meta(charset='utf-8')
      title MacGyver Example
      link(href='//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', rel='stylesheet')
      link(href='css/macgyver.css', rel='stylesheet')
      link(href='css/vendor.css', rel='stylesheet')

  body(ng-app="Mac", mac-scroll-spy, mac-scroll-spy-offset="10")
    nav.navbar.navbar-fixed-top.navbar-inverse
      .container-fluid
        .navbar-header
          a.navbar-brand(href="index.html") MacGyver

        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li: a(href="index.html") Directives
            li: a(href="filters.html") Filters
            li: a(href="events.html") Events
            li: a(href="util.html") Utilities
            li
              a(
                href   = "http://angular-macgyver.github.io/macgyver-table/"
                target = "_blank"
              )
                | Table view&nbsp;
                span.glyphicon.glyphicon-new-window

    block header

    .container
      .row.content(ng-controller="ExampleController")
        #example.col-md-9.col-xs-12
          block content

        #nav.col-md-3.col-xs-12
          block nav

    footer.footer.text-center
      ul.footer-links.list-inline
        li
          iframe(
            src               = "http://ghbtns.com/github-btn.html?user=angular-macgyver&repo=MacGyver&type=watch&count=true"
            allowtransparency = "true"
            frameborder       = "0"
            scrolling         = "0"
            width             = "110"
            height            = "20"
          )
        li
          iframe(
            src               = "http://ghbtns.com/github-btn.html?user=angular-macgyver&repo=MacGyver&type=fork&count=true"
            allowtransparency = "true"
            frameborder       = "0"
            scrolling         = "0"
            width             = "95"
            height            = "20"
          )

      .container
        p Built by&nbsp;
          a(href="http://github.com/adrianlee44") adrianlee44
        p Code licensed under&nbsp;
          a(href="https://github.com/angular-macgyver/MacGyver/blob/master/LICENSE") MIT

      ul.footer-links.list-inline
        li Currently @@version
        li &middot;
        li: a(href="https://github.com/angular-macgyver/MacGyver") Github
        li &middot;
        li: a(href="https://github.com/angular-macgyver/MacGyver/issues") Issues
        li &middot;
        li: a(href="https://github.com/angular-macgyver/MacGyver/blob/master/CHANGELOG.md") Changelog
        li &middot;
        li: a(href="https://github.com/angular-macgyver/MacGyver/blob/master/README.md") README

    script(src="//cdnjs.cloudflare.com/ajax/libs/prettify/r298/prettify.js", type="text/javascript")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.0/angular.min.js", type="text/javascript")
    script(src="//cdnjs.cloudflare.com/ajax/libs/underscore.string/2.3.3/underscore.string.min.js", type="text/javascript")
    script(src="//code.angularjs.org/1.3.0/angular-animate.js", type="text/javascript")
    script(src='js/MacGyver.js', type="text/javascript")
    script(src="js/doc.js", type="text/javascript")
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
